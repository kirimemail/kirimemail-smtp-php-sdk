{
    "name": "kirim-email/smtp-sdk",
    "description": "PHP SDK for Kirim.Email SMTP API",
    "type": "library",
    "keywords": ["smtp", "email", "kirim-email", "api", "sdk"],
    "homepage": "https://github.com/kirimemail/kirimemail-smtp-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Kirim.Email",
            "email": "support@kirim.email",
            "homepage": "https://kirim.email"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "KirimEmail\\Smtp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KirimEmail\\Smtp\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12",
        "check": [
            "@cs-check",
            "@test"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}